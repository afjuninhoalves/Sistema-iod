<%- include('../partials/sidebar') %>
<main class="max-w-screen p-4" class="flex-1 p-6 overflow-y-auto">
  <h1 class="text-2xl font-semibold mb-6">Ocorrências</h1>
  <div class="overflow-x-auto bg-white rounded-lg shadow">
    <div class="overflow-x-auto"><table class="min-w-full">
      <thead class="bg-gray-200"><tr>
        <th class="px-4 py-2">ID</th><th class="px-4 py-2">Cidade</th><th class="px-4 py-2">Descrição</th>
        <th class="px-4 py-2">Data/Hora</th><th class="px-4 py-2">Ações</th>
      </tr></thead>
      <tbody>
        <% ocorrencias.forEach(function(o) { %>
        <tr class="border-b">
          <td class="px-4 py-2"><%= o.id %></td>
          <td class="px-4 py-2"><%= o.cidade %></td>
          <td class="px-4 py-2"><%= o.descricao %></td>
          <td class="px-4 py-2"><%= o.data_hora %></td>
          <td class="px-4 py-2"><a href="/editar-ocorrencia/<%= o.id %>" class="text-blue-600">Editar</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table></div>
  </div>
</main>
