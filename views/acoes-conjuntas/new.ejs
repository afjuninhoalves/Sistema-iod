<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Nova Ação Conjunta - SistemaCIM</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col h-screen">

  <!-- 2) Container cinza: sidebar + conteúdo -->
  <div class="flex flex-1 bg-gray-100 overflow-hidden">
    
    <!-- Sidebar fixa -->
    <%- include('../partials/sidebar') %>

    <!-- Main: tudo que é conteúdo da página -->
    <main class="max-w-screen p-4" class="flex-1 overflow-y-auto p-6">
      <h1 class="text-2xl font-semibold mb-6">Nova Ação Conjunta</h1>

      <div class="bg-white p-6 rounded shadow">
        <form class="space-y-4" action="/acoes-conjuntas" method="POST" class="space-y-6">
          <!-- Cidade Responsável -->
          <div>
            <label class="block text-sm font-medium text-gray-700">Cidade Responsável</label>
            <select class="w-full" name="cidade_responsavel_id" required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
              <% cidades.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.cidade %></option>
              <% }) %>
            </select>
          </div>

          <!-- Participantes -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Cidades Participantes</label>
            <div class="grid grid-cols-2 gap-4">
              <% cidades.forEach(c => { %>
              <label class="inline-flex items-center">
                <input class="w-full" type="checkbox" name="participantes" value="<%= c.id %>"
                       class="form-checkbox h-5 w-5 text-blue-600">
                <span class="ml-2"><%= c.cidade %></span>
              </label>
              <% }) %>
            </div>
          </div>

          <!-- Objetivo -->
          <div>
            <label class="block text-sm font-medium text-gray-700">Objetivo</label>
            <textarea name="objetivo" required rows="4"
                      class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></textarea>
          </div>

          <!-- Botão -->
          <button type="submit"
                  class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded shadow hover:bg-green-700">
            Criar Ação
          </button>
        </form>
      </div>
    </main>
  </div>

</body>
</html>
